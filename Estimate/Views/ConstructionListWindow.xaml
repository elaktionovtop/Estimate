<Window x:Class="Estimate.Views.ConstructionListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Estimate.ViewModels"
        WindowStartupLocation="CenterOwner"
        Title="Объекты" Height="450" Width="600">

    <Window.InputBindings>
        <KeyBinding Key="N"
                        Modifiers="Control"
                        Command="{Binding CreateItemCommand}" />
    </Window.InputBindings>

    <StackPanel>
        <Menu>
            <MenuItem Command="{Binding CreateItemCommand}"
                    Header="Добавить"
                    InputGestureText="Ctrl+N"
                            />
            <MenuItem Command="{Binding EditItemCommand}"
                    Header="Редактировать"
                    InputGestureText="Enter" 
                            />
            <MenuItem Command="{Binding DeleteItemCommand}"
                    Header="Удалить"
                    InputGestureText="Del" 
                            />
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" 
                            Margin="10"
                            >
                <TextBlock FontWeight="Bold"
                               Margin="5"
                               Text="Объекты"
                               />
                <DataGrid AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              Height="200"
                              IsReadOnly="True"
                              ItemsSource="{Binding Items}"
                              SelectedItem="{Binding SelectedItem,
                                           Mode=TwoWay}"
                              SelectionChanged="Grid_SelectionChanged"
                              PreviewKeyDown="DataGrid_PreviewKeyDown"
                              >
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Name}"
                                                Header="Имя"
                                                />
                        <DataGridTextColumn Binding="{Binding Address}"
                                                Header="Адврес"
                                                />
                        <DataGridTextColumn Binding="{Binding Description}"
                                                Header="Описание"
                                                />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
