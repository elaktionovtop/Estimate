<Window x:Class="Estimate.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        xmlns:app="clr-namespace:Estimate"
        xmlns:local="clr-namespace:Estimate.Views"
        xmlns:vm="clr-namespace:Estimate.ViewModels"
        Title="Авторизация" Height="300" Width="300">


    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

        <TextBlock Margin="0,0,0,5"
                   Text="Логин"
                   Width="200"
                   />

        <TextBox Text="{Binding Login}"
                 Margin="0,0,0,10"
                 Width="200"
                 />

        <TextBlock Margin="0,0,0,5"
                   Width="200"
                   Text="Пароль" 
                   />

        <PasswordBox x:Name="PasswordBox"
                     Margin="0,0,0,10"
                     Width="200"
                     />

        <StackPanel Orientation="Horizontal"
                     Margin="0,0,0,10"
                     Width="200"
                    >
            <TextBlock Text="Число попыток: "/>
            <TextBlock Text="{Binding AttemptsCount}"/>
        </StackPanel>

        <Button Command="{Binding CheckLoginCommand}" Content="Войти" 
                Width="100" Margin="5" 
                CommandParameter="{Binding ElementName=PasswordBox}"/>
    </StackPanel>
</Window>
